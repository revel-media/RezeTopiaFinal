<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.krito.com.rezetopia.activities.PlayerSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/green7"
            android:orientation="horizontal"
            android:weightSum="4"
            >

            <ImageView
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                android:id="@+id/back"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/Cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/weight"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_border"
                android:hint="@string/weight_hint"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:inputType="number"
                android:textSize="12sp"/>

            <EditText
                android:inputType="number"
                android:id="@+id/height"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@drawable/edit_border"
                android:hint="@string/height_hint"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/saveChanges"
                android:layout_marginEnd="@dimen/dimen_20"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="@string/save_changes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bitch_"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/forward"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <FrameLayout
                    android:layout_marginTop="@dimen/dimen_20"
                    android:id="@+id/lwf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/lwf_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/lwf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rwf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/rwf_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/rwf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:id="@+id/cf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/cf_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/cf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/ss"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/ss_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/ss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <FrameLayout
                    android:layout_marginTop="@dimen/dimen_40"
                    android:id="@+id/lm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/lm_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/lm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="@dimen/dimen_40"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/rm_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/rm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:id="@+id/am"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/am_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/am"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_below="@id/am"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/cm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/cm_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/cm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_below="@id/cm"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/dm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/dm_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/dm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/defence"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <FrameLayout
                    android:id="@+id/lb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/dimen_40"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/lb_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/lb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_40"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/rb_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:id="@+id/cb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/cb_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_below="@id/cb"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/sw"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/sw_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/sw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/sw"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/gk"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:background="@drawable/change_color">

                    <TextView
                        android:id="@+id/gk_t"
                        android:textColor="@color/green7"
                        android:layout_gravity="center"
                        android:text="@string/gk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
