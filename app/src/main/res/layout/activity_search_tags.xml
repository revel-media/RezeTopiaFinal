<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.krito.com.rezetopia.activities.FriendsTag"
    android:orientation="vertical">

    <LinearLayout
        android:weightSum="2"
        android:background="@color/green7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:padding="7dp"
            android:id="@+id/backFriends"
            android:src="@drawable/ef_ic_arrow_back"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.3"/>

        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/searchFriendsView"
            android:paddingStart="@dimen/dimen_10"
            android:paddingEnd="@dimen/dimen_10"
            android:hint="@string/search"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_border"
            android:layout_weight="1.3"/>

        <TextView
            android:id="@+id/doneTagView"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/done"
            android:textColor="@color/white"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginEnd="10dp"
        android:paddingEnd="@dimen/dimen_10"
        android:paddingStart="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addedTags"/>


    <android.support.v7.widget.RecyclerView
        android:layout_marginEnd="15dp"
        android:paddingEnd="@dimen/dimen_10"
        android:paddingStart="5dp"
        android:layout_marginStart="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchTags"/>
</LinearLayout>
